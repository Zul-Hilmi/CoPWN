<!-- check if the user is logged in -->
<% 
    let loggedIn = false
    if(locals.user) loggedIn=true
%>

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container">
    <a href="<%= !loggedIn? "/" : "/user/" %>" class="navbar-brand"><i>CoPWN</i></a>
    <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav">
        <div class="navbar-toggler-icon"></div>
    </button>
    <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="<%= !loggedIn? "/" : "/user/" %>">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/coupon/search">Coupon</a></li>
            <% if(loggedIn){ %>
                <li class="nav-item"><a class="nav-link" href="/user/<%= user._id %>">Account</a></li>
                <li class="nav-item"><a class="nav-link" href="/user/logout">Logout</a></li>
            <% }else{ %>
                <li class="nav-item"><a class="nav-link" href="/user/login">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/user/register">Register</a></li>
            <% } %>
        </ul>
        </div>
    </div>
</nav>