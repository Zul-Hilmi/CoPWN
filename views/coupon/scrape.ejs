<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CoPWN</title>
    <link href="css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>
<body>
    <%- include ('../includes/navigation.ejs')%>
    <%- include('../includes/message.ejs')%>
    <!-- GET /coupon/create -->
    <div class="container">
            <form method="POST" action="">
            <% if(locals.user.role.toLowerCase() === "admin"){%>
                <div class="mb-3 mt-3">
                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="shopName">Shop Name:</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" name="shopName">
                        </div>
                        <div class="col">
                            <select class="form-select" name="source">
                                <option value="1" selected>Scrape from Hargapedia</option>
                                <option value="2">Scrape from LoveCoupons</option>
                                <option value="3">Scrape from Cuponation</option>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col">
                            <br>
                            <input type="submit" class="btn btn-primary">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <% if(locals.coupons){%>
                <b><%= coupons.length %> coupons found</b>
                <hr>
                <% for(let coupon of coupons){ %>
                    <p>
                        <a href="/coupon/<%= coupon._id %>"><%= coupon.discount %></a> have been scraped</p>
                    <br>
                <% } %>
            <% } %>
        <%}%>
    </div>
</body>
    


